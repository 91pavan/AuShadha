<div data-dojo-type = "dijit/form/Form" 
     id             = "newFamilyHistoryAddOrEditForm" 
     data-dojo-id   = "newFamilyHistoryAddOrEditForm"
     encType        = "multipart/form-data" 
     action         = "" 
     method         = "">

  <script type="dojo/method" data-dojo-event="onSubmit" data-dojo-args="evt">
    if( this.validate() ){
      require(["dijit/registry", 
              "dojo/request","dojo/dom","dojo/dom-form","dojo/json","dojo/_base/fx",
               "dojo/domReady!"
      ],
      function(registry, request, dom, domForm, JSON,fx){
          var url = "{{action}}";
          var form_data = domForm.toObject('newFamilyHistoryAddOrEditForm');
          request(url,{method:"POST", data: form_data}).
          then( 
            function(json){
              var jsondata = JSON.parse(json);
              if (jsondata.success == true){
                if (jsondata.editUrl){
                  registry.byId("family_history_add_or_edit_form").set('href', jsondata.editUrl);
                }
              }
            },
            function(json){
              alert("Server Error ! Please retry..")
            },
            function(evt){
              dom.byId('patientFamilyHistoryFormJsonMessage').innerHTML = "FamilyHistory Form action completed successfully";
              fx.fadeOut( {node: dom.byId("patientFamilyHistoryFormJsonMessage"), duration: 2000}).play();
              return false;
            }
          );
        return false;
   	   }
 		 );
 		 return false;
    }
    else{
     raiseInvalidFormSubmission();
     return false;
    }
  </script>


<table>
  {{patient_family_history_form}}
</table>

    <button data-dojo-type = "dijit/form/Button" 
            data-dojo-props="iconClass: 'dijitEditorIcon dijitEditorIconSave'"
            type           = "submit" 
            name           = "{{button_label}}Button" 
            value          = "{{button_label}}"
    >
      {{button_label}}
    </button>

{% if canDel %}
  <button data-dojo-type  = "dijit/form/Button" 
						data-dojo-props = "iconClass: 'dijitEditorIcon dijitEditorIconDelete'"
            type            = "button"
            name            = "delPatientFamilyHistory"
            id              = "delPatientFamilyHistoryBtn"
   >
    Delete
    <script type="dojo/method" data-dojo-event="onClick" data-dojo-args="evt">
      var confirmDialog = confirm("This will delete the FamilyHistory Data.. Are you Sure ? ");
      if (confirmDialog == true){
        require(["dojo/request", "dojo/json", "dojo/dom", "dijit/registry"], 
        function(request, JSON, dom, registry){
          request("{{delUrl}}",{method: "GET"}).
          then(
            function(json){
              var jsondata = JSON.parse(json);
              if(jsondata.success == true){
                registry.byId("family_history_add_or_edit_form").set('href', jsondata.addUrl);
              }
              else{
                dom.byId("patientFamilyHistoryFormJsonMessage").innerHTML = jsondata.error_message;
              }
            },
            function(json){
              alert("Server Error ! Please retry..")
            },
            function(evt){
              console.log("Delete functions run successfully..");
            }
          );
        });
      }
      else{
        return false;
      }
    </script>
  </button>
{% endif %}

<div id="patientFamilyHistoryFormJsonMessage"></div>
</div>
