var stdFeildsBlankMessageHtml 		= "<p> Please fill in all required fields and resubmit </p>";

var stdFeildsBlankMessageCss 			= { 'color'        : 'Yellow', 
                                      'font-size'    : '14pt', 
                                      'font-weight'  : 'bold', 
                                      'padding-left' :'20px'
                                    };

var stdLimitExceededMessageHtml 	= "<p> Limit Exceeded ! Please stay within the indicated number of words and resubmit </p>";
var stdLimitNotReachedMessageHtml = "<p> Minimum Characters not Entered ! Please resubmit </p>";

function printLimitErrorMessage( limit_data, num_of_chars ){
	var lower_limit 	= parseInt( limit_data.lower_limit );
	var upper_limit 	= parseInt( limit_data.upper_limit );
	var num_of_chars 	= parseInt( num_of_chars )					;
	var error_message = $('');

	if (num_of_chars > lower_limit){
		if ( num_of_chars > upper_limit ){
				error_message.html( stdLimitExceededMessageHtml ).css( stdFeildsBlankMessageCss );
				return error_message;
		}
		else{
				return false;
		}
	}
	else{
			error_message.html( stdLimitNotReachedMessageHtml ).css( stdFeildsBlankMessageCss );
			return error_message;
	}
}

